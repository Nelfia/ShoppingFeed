<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">


    <route id="my_route_id" path="/admin/module/ShoppingFeed">
        <default key="_controller">ShoppingFeed\Controller\ConfigurationController::viewAction</default>
    </route>

    <route id="TEST" path="/admin/module/ShoppingFeed/test">
        <default key="_controller">ShoppingFeed\Controller\ConfigurationController::testAction</default>
    </route>

    <route id="ShoppingFeed.feed.configuration.create" path="/admin/module/ShoppingFeed/config" methods="post">
        <default key="_controller">ShoppingFeed\Controller\FeedConfigurationController::createAction</default>
    </route>

    <route id="ShoppingFeed.feed.configuration.update" path="/admin/module/ShoppingFeed/config/{configId}" methods="post">
        <default key="_controller">ShoppingFeed\Controller\FeedConfigurationController::updateAction</default>
    </route>

    <route id="ShoppingFeed.feed.configuration.delete" path="/admin/module/ShoppingFeed/config/delete/{configId}">
        <default key="_controller">ShoppingFeed\Controller\FeedConfigurationController::deleteAction</default>
    </route>
</routes>
